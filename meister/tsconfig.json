{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": "/",
    "sourceMap": true,
    "sourceRoot": "./",
    "rootDir": "./",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "*.ts"
  ],
  "exclude": ["node_modules"]
}
